pipeline {
    agent any

    environment {
        VENV_DIR = "venv"
        PROJECT_DIR = "messaging_app/messaging_app"
    }

    stages {

        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/pointerjm/alx-backend-python.git',
                    branch: 'main'
                )
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    echo "üì¶ Setting up Python virtual environment..."
                    python3 -m venv ${VENV_DIR}
                    ${VENV_DIR}/bin/pip install --upgrade pip

                    echo "üìö Installing dependencies..."
                    ${VENV_DIR}/bin/pip install -r ${PROJECT_DIR}/requirements.txt

                    echo "üß™ Installing testing and linting tools..."
                    ${VENV_DIR}/bin/pip install pytest flake8 pytest-cov
                '''
            }
        }

        stage('Lint Code') {
            steps {
                sh '''
                    echo "üîç Running flake8 lint checks..."
                    ${VENV_DIR}/bin/flake8 ${PROJECT_DIR} --count --select=E9,F63,F7,F82 --show-source --statistics
                    ${VENV_DIR}/bin/flake8 ${PROJECT_DIR} --count --exit-zero --max-complexity=10 --max-line-length=88 --statistics
                '''
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    def testsDir = "${PROJECT_DIR}/tests"
                    if (fileExists(testsDir)) {
                        sh """
                            echo "üß™ Running pytest with coverage..."
                            ${VENV_DIR}/bin/pytest ${testsDir} \
                                --cov=${PROJECT_DIR} \
                                --cov-report=xml \
                                --junitxml=report.xml
                        """
                    } else {
                        echo "‚ö†Ô∏è No tests directory found at ${testsDir}. Skipping tests."
                    }
                }
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'report.xml'
                }
            }
        }

        stage('Build Docker Image') {
            when {
                expression { fileExists("${PROJECT_DIR}/Dockerfile") }
            }
            steps {
                sh '''
                    echo "üê≥ Building Docker image for messaging_app..."
                    docker build -t messaging_app:latest ${PROJECT_DIR}
                '''
            }
        }
    }

    post {
        always {
            echo "‚úÖ Pipeline completed (success or failure). Cleaning up workspace..."
        }
        success {
            echo "üéâ All stages completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed. Check logs above for details."
        }
    }
}
